<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.germanbridgescoreboard.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_itemFragment"
            app:destination="@id/itemFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_bids_outcomes"
        android:name="com.example.germanbridgescoreboard.ui.bidoutcome.BidsOutcomesFragment"
        android:label="@string/title_bids_outcomes"
        tools:layout="@layout/fragment_bids_outcomes" />

    <fragment
        android:id="@+id/navigation_scoreboard"
        android:name="com.example.germanbridgescoreboard.ui.scoreboard.ScoreboardFragment"
        android:label="@string/title_scoreboard"
        tools:layout="@layout/fragment_scoreboard" />

    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.germanbridgescoreboard.ui.gameinit.InputPlayerFragment"
        android:label="fragment_item_game_init"
        tools:layout="@layout/fragment_game_init" />
</navigation>